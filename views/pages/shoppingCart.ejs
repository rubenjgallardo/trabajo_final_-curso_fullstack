<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carrito de Compras</title>
  <link rel="stylesheet" href="./shoppingCart.css">
</head>
<body>

    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="/">
                  <span>Ecommerce</span>
                </a>
            </div>
            <div class="user">
                <img src="./photo_profile.webp" alt="Usuario" class="user-image" onclick="toggleMenu()">
                <div class="user-menu" id="userMenu">
                    <p><strong>Nombre de Usuario</strong></p>
                    <span id="admin-label">Admin</span>
                    <a href="#">Dashboard</a>
                    <a href="#">Carrito de Compras</a>
                    <a href="#">Mis compras</a>
                    <a href="#">Editar Perfil</a>
                    <a href="#">Salir</a>
                </div>
            </div>
        </nav>
    </header>
  <main>
    <section class="cart">
      <h2>Productos en el Carrito</h2>
      <ul id="cart-items">
        <!-- Ejemplos de productos -->
        <% if(products.length > 0){ %>
          <% for (var i =0; i < products.length;  i++ ) { %>

            <li>
              <img src="./product-image.jpg" alt="Producto 1">
              <div class="product-info">
                <h3><%= products[i].name %></h3>
                <p>Precio:<%= products[i].price %></p>
                <p>Cantidad: <span class="quantity">1</span></p>
                <button class="quantity-btn" onclick="increaseQuantity(this)">+</button>
                <button class="quantity-btn" onclick="decreaseQuantity(this)">-</button>
                <button class="remove-btn" onclick="removeProduct(this)">Quitar</button>
              </div>
            </li>
  
            <% } %>
        <% } else { %>
          <p> todavia no tienes productos en tu carrito de compras</p>
          <% } %>

      </ul>
      <p>Total de la Compra: <span id="total-price">$49.98</span></p>
    </section>

    <section class="checkout">
      <h2>Ingresa tu Dirección</h2>
      <form id="checkout-form">
        <label for="address">Dirección:</label>
        <input type="text" id="address" name="address" required>
        <button type="submit">Realizar Compra</button>
      </form>
    </section>
  </main>

  <div id="modal" class="modal">
    <div class="modal-content">
      <span class="close" >&times;</span>
      <p>Estamos preparando tu compra para enviarla. <br>
        ¡Muchas Gracias!
    </p>
    <button onclick="closeModal()">Aceptar</button>
    </div>
  </div>

  <script>
    function openModal() {
      document.getElementById('modal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('modal').style.display = 'none';
    }

    function increaseQuantity(btn) {
      var quantityElement = btn.parentNode.querySelector('.quantity');
      var currentQuantity = parseInt(quantityElement.textContent);
      quantityElement.textContent = currentQuantity + 1;
    }

    function decreaseQuantity(btn) {
      var quantityElement = btn.parentNode.querySelector('.quantity');
      var currentQuantity = parseInt(quantityElement.textContent);
      if (currentQuantity > 1) {
        quantityElement.textContent = currentQuantity - 1;
      }
    }

    function removeProduct(btn) {
      var listItem = btn.parentNode.parentNode;
      listItem.parentNode.removeChild(listItem);
    }

    document.getElementById('checkout-form').addEventListener('submit', function(event) {
      event.preventDefault();
      openModal();
    });

    function toggleMenu() {
            var userMenu = document.getElementById("userMenu");
            userMenu.style.display = (userMenu.style.display === "flex") ? "none" : "flex";
        }

        async function logout (){
           await  fetch('http://localhost:3000/api/logout')
           document.cookie = "token= ; expires = Thu, 01 Jan 1970 00:00:00 GMT"
           window.location.href = 'http://localhost:3000/login'
        }
  </script>

</body>
</html>
